<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >

    <LinearLayout android:layout_width="wrap_content" android:orientation="horizontal"
                  android:layout_height="wrap_content">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/Num1"
                android:layout_below="@+id/Plus"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:longClickable="false"
                android:onClick="onClickNum"
                />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/Num2"
                android:layout_alignTop="@+id/Num1"
                android:layout_toRightOf="@+id/Num1"
                android:layout_toEndOf="@+id/Num1"
                android:onClick="onClickNum"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/Num3"
                android:layout_alignTop="@+id/Num2"
                android:layout_toRightOf="@+id/Num2"
                android:layout_toEndOf="@+id/Num2"
                android:onClick="onClickNum"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/Num4"
                android:onClick="onClickNum" android:layout_alignTop="@+id/Num3"
                android:layout_toStartOf="@+id/buttonOt"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/Num5"
                android:layout_above="@+id/Num7"
                android:layout_toRightOf="@+id/Num4"
                android:layout_toEndOf="@+id/Num4"
                android:onClick="onClickNum"/>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/Num6"
                android:onClick="onClickNum" android:layout_alignTop="@+id/Num7"
                android:layout_alignParentStart="true"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:id="@+id/Num7"
                android:onClick="onClickNum" android:layout_below="@+id/Num2" android:layout_toEndOf="@+id/Num6"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:id="@+id/Num8"
                android:onClick="onClickNum" android:layout_alignTop="@+id/Num7" android:layout_toEndOf="@+id/Num7"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/Num9"
                android:layout_alignTop="@+id/Num8"
                android:layout_toRightOf="@+id/Num8"
                android:layout_toEndOf="@+id/Num8"
                android:onClick="onClickNum"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/Num0"
                android:onClick="onClickNum"
                android:layout_alignTop="@+id/Num9" android:layout_alignStart="@+id/Num5"/>


    </LinearLayout>
</LinearLayout>